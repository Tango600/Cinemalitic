ContextFilter=Label=№;FilterField=CONTRACT_NUMBER;Width=30;
DBFilter=Label=Тип доп.соглашения;SQL=select -1 ID, '<>' CONTRACT_TYPE from RDB$DATABASE union select ID, CONTRACT_TYPE from contract_types;List=CONTRACT_TYPE;Key=ID;FilterField=CONTRACT_TYPE_ID;Width=250;
DBFilter=Label=Дистрибутор;SQL=select -1 ID, '<>' DISTR_NAME from RDB$DATABASE union select ID, DISTR_NAME from DISTRIBUTOR;List=DISTR_NAME;Key=ID;FilterField=DISTR_ID;Width=200;
DBFilter=Label=Кинотеатр;SQL=select -1 CINEMA_ID, '<>' CINEMA_NAME from RDB$DATABASE union select CINEMA_ID, CINEMA_NAME from THEATERS;List=CINEMA_NAME;Key=CINEMA_ID;FilterField=c.CINEMA_ID;
DBFilter=Label=Фильм;SQL=select -1 ID_FILM, '<>' FILM_NAME from RDB$DATABASE union all select ID_FILM, FILM_NAME from (select ID_FILM, FILM_NAME from FILMS order by lower(FILM_NAME));VariableName=FilmIDF;List=FILM_NAME;Key=ID_FILM;Width=200;

Query=select cast((select list(f.film_name, ';') from films_to_contracts fc left join films f on fc.film_id = f.id_film where fc.contract_id = c.contract_id) as varchar(300)) films_names, d.distr_name, c.*, ct.contract_type, mt.media_name, t.cinema_name, t.max_seats from CONTRACTS c left join THEATERS t on c.CINEMA_ID = t.CINEMA_ID left join contract_types ct on c.contract_type_id=ct.id left join media_type mt on c.media_type_id=mt.med_id left join distributor d on d.id=c.distr_id where c.AGREEMENT_DATE between '&CBegDate' and '&CEndDate' and (&FilmIDF=-1 or exists(select * from FILMS_TO_CONTRACTS fc where fc.film_id = &FilmIDF and fc.contract_id = c.contract_id));

